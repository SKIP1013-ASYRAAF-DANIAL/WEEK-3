package numericData;

class Exercise1 {

	public static void main(String[] args) { // In class must have main method
		// TODO Auto-generated method stub
		int number1 = 11;  // Declare 5 integer variables and assign a value
		int number2 = 22;
		int number3 = 33;
		int number4 = 44;
		int number5 = 55;
		double number6 = 66;  // Double boleh dapat number titik perpuluhan yang pendek
		double number7 = 88;
		float number8 = 99;   // Float boleh dapat number titik perpuluhan yang panjang
		float number9 = 200;
		
		int sum,avg;  // Declare an integer variable called sum to hold the sum value
		double div;
		float div2;
		double mul;
		float mul2;
		
		sum = number1 + number2 + number3 + number4 + number5;  // Compute sum
		avg = sum/5;
		div = number7/number6;
		div2 = number9/number8;
		mul = number1*number2*number3*number4*number5;
		mul2 = (number1*number2)/number3;
		
		System.out.print("The sum is " + sum);  // Print a descriptive string
		                                       // Cursor stays after the printed string
		
		System.out.print("\nThe average is " + avg);
		
		System.out.printf("\nThe divided number is %.2f" , div);   //%.2f untuk jadikan 2 tempat perpuluhan
		
		System.out.printf("\nThe divided float number is %.2f " , div2);
		
		System.out.printf("\nThe multiplication number is %.2f" , mul);
		
		System.out.printf ("\nThe total is %.2f " , mul2);


	}

}
